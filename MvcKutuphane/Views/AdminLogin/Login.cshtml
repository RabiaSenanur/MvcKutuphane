
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Giriş Sistemi</title>
    <link rel="icon" type="image/x-icon" href="~/webpanel/assets/user-setting.ico" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href=" ~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page" style="background-image: url('https://i0.wp.com/demishia.com/wp-content/uploads/2018/04/admin-login-background-images-8.jpg?ssl=1'); background-size: cover; background-position: center;">

    <div class="login-box">
        <div class="login-logo">
            <a href="~/AdminLTE-3.0.4/index2.html"><b>Admin</b>Giriş</a>
        </div>
        <!-- /.login-logo -->
        @using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post))
        {
            <div class="card">
                <div class="card-body login-card-body">
                    <p class="login-box-msg">Oturum Aç</p>

                    <form action="~/AdminLTE-3.0.4/index3.html" method="post">
                        <div class="input-group mb-3">
                            <input type="email" name="Kullanıcı" class="form-control" placeholder="Kullanıcı Adı">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <input type="password" name="Sifre" class="form-control" placeholder="Şifre">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="icheck-primary">
                                    <input type="checkbox" id="remember">
                                    <label for="remember">
                                        Beni Hatırla
                                    </label>
                                </div>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block" style="width:150px; margin-left:-50px">Oturum Aç</button>
                            </div>
                            <!-- /.col -->
                            <p class="mb-1">
                                <a href="/AdminLogin/ResetPassword/" style="margin-left:15px;color:brown">Şifremi Unuttum</a>
                            </p>
                        </div>
                    </form>

                    <div class="social-auth-links text-center mb-3">
                        <p>- Veya -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Facebookla Bağlan
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google mr-2"></i> Google ile Bağlan
                        </a>
                    </div>
                    <!-- /.social-auth-links -->
                    <p class="mb-0">
                        <a href="/Vitrin/Index/" class="text-center" style="margin-left:115px; color:teal;">Vitrine Geri Dön</a>
                    </p>
                </div>
                <!-- /.login-card-body -->
            </div>
        }
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
</body>
</html>

