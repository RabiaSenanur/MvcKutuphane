
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Şifremi Unuttum</title>
    <link rel="icon" type="image/x-icon" href="~/webpanel/assets/user-setting.ico" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href=" ~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page" style="background-image: url('https://i0.wp.com/demishia.com/wp-content/uploads/2018/04/admin-login-background-images-8.jpg?ssl=1'); background-size: cover; background-position: center;">

    <div class="login-box">
        <div class="login-logo">
            <p>Şifre Sıfırlama</p>
        </div>
        <!-- /.login-logo -->
        @using (Html.BeginForm("Login", "AdminLogin", FormMethod.Post))
        {
            <div class="card">
                <div class="card-body login-card-body">
                    <form action="~/AdminLTE-3.0.4/index3.html" method="post">
                        <div class="input-group mb-3">
                            <input type="email" name="Kullanıcı" class="form-control" placeholder="Mail Adresinizi giriniz">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <button type="submit" class="btn btn-info" style="width:150px; margin-left:79px">Şifreyi Sıfırla</button>
                        </div>

                    </form>
                </div>
                <!-- /.login-card-body -->
            </div>
        }
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
</body>
</html>

