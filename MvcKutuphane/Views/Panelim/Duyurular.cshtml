@using MvcKutuphane.Models.Entity
@model List<Tbl_Duyurular>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Duyurular</h2>

<table class="table table-hover">
    <tr style="background-color:antiquewhite">
        <th>Kategori</th>
        <th>Tarih</th>
        <th>İçerik</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Kategori</td>
            <td>@Convert.ToDateTime(d.Tarih).ToString("dd/MM/yyyy")</td>
            <td>@d.Icerik</td>
        </tr>
    }
</table>
