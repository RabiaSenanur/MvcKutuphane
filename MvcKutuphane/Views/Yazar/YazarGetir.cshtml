@model MvcKutuphane.Models.Entity.Tbl_Yazarlar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div>
            <label>Yazar Adı</label>
            @Html.TextBoxFor(y => y.Ad, new { @class = "form-control" })
        </div>
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div>
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(y => y.Soyad, new { @class = "form-control" })
        </div>
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div>
            <label>Yazar Detay Bilgileri</label>
            @Html.TextAreaFor(y => y.Detay, new { @class = "form-control" })
        </div>
    </div>
    <div>
        <button class="btn btn-warning" style="width:250px; height:35px; font-size:20px">Yazar Bilgilerini Güncelle</button>
    </div>
}
