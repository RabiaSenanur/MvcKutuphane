@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Tbl_Yazarlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-striped">
    <tr style="background-color:aqua">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>DETAY</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var yzr in Model)
    {
        <tr>
            <td>@yzr.ID</td>
            <td>@yzr.Ad</td>
            <td>@yzr.Soyad</td>
            <td>@yzr.Detay</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = yzr.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor musunuz?')", style = "width:35px; height:35px; font-size:18px" }) </td>
            <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-success" style="width:90px; height:35px; font-size:18px">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-outline-success" style= "background-color:lightcoral;  height:35px; font-size:18px">Yazarın Kitapları</a></td>
        </tr>
    }
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))
<a href="/Yazar/YazarEkle/" class="btn btn-primary" style="width:160px; height:35px; font-size: 18px;">Yeni Yazar Ekle</a>
