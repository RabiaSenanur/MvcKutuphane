@using MvcKutuphane.Models.Entity
@model List<Tbl_Kitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
 {
    <div style="margin-bottom:15px; margin-top:15px;">
        <b>Aranacak Kitap Adını Girin: &nbsp;</b>@Html.TextBox("p")
        <input type="submit" value="Ara" class="btn btn-primary" />
    </div>
 }

<table class="table table-bordered">
    <tr style="background-color:aqua">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kategorisi</th>
        <th>Kitap Yazarı</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.Ad</td>
            <td>@k.Tbl_Kategoriler.KategoriAd</td>
            <td>@k.Tbl_Yazarlar.Ad&nbsp;@k.Tbl_Yazarlar.Soyad</td>
            <td>@k.BasımYıl</td>
            <td>@k.Yayınevi</td>
            <td>@k.Sayfa</td>
            <td>@k.Durum</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger" style="width: 35px; height: 35px; font-size: 18px">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success" style="width:90px; height:35px; font-size:18px">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary" style="width:160px; height:35px; font-size: 18px;">Yeni Kitap Ekle</a>


