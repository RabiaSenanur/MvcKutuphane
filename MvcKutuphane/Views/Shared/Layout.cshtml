
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/x-icon" href="~/webpanel/assets/online-library.ico" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .form-control {
            font-size: 18px; /* Yazı boyutunu ayarlayın */
            font-family: Arial, sans-serif; /* Yazı tipini ayarlayın */
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #f1f1f1;
                display: block;
            }

                .sidebar a:hover {
                    color: #00ffff;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
            font-size: 18px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="/Istatistik/Index/"><i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Kitap/Index/"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-user"></i> &nbsp; Personeller</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Odunc/OduncVer/"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Kitap Ödünç Ver</a>
            <a href="/Odunc/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Kitap Ödünç Al</a>
        }
        <a href="/Duyuru/Index/"><i class="glyphicon glyphicon-earphone"></i> &nbsp; Duyurular</a>
        <a href="/Islem/Index/"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; İşlemler</a>
        <a href="/Istatistik/Galeri/"><i class="glyphicon glyphicon-picture"></i> &nbsp; Galeri</a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-th-large"></i> &nbsp; Vitrin</a>
        <a href="/Istatistik/LinqKart/"><i class="glyphicon glyphicon-file"></i> &nbsp; Linq Kartlar</a>
        <a href="/Grafik/Index/"><i class="glyphicon glyphicon-align-right"></i> &nbsp; Grafikler</a>
        @if (User.IsInRole("A"))
        {
            <a href="/Ayarlar/Index/"><i class="glyphicon glyphicon-cog"></i> &nbsp;Ayarlar </a>
        }
            <a href="/AdminLogin/LogOut/"><i class="glyphicon glyphicon-log-out"></i> &nbsp; Çıkış</a>


        </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

