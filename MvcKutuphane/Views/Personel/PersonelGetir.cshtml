@model MvcKutuphane.Models.Entity.Tbl_Personeller
@{
    ViewBag.Title = "PersonelGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("PersonelGuncelle", "Personel", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <br />
        <label>Personel Adı ve Soyadı</label>
        @Html.TextBoxFor(p => p.Personel, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning" style="width:120px; height:35px; font-size:20px">Güncelle</button>
    </div>
}

