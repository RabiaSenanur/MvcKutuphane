@using MvcKutuphane.Models.Entity
@model List<Tbl_Personeller>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeller</h2>

<table class="table table-bordered">
    <tr style="background-color:aqua">
        <th>Personel ID</th>
        <th>Personel Adı Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var prs in Model)
     {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.Personel</td>
            <td><a href="/Personel/PersonelSil/@prs.ID" class="btn btn-danger" style="width:35px; height:35px; font-size:18px">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@prs.ID" class="btn btn-success" style="width:90px; height:35px; font-size:18px">Güncelle</a></td>
        </tr>
     }
</table>
<a href="/Personel/PersonelEkle/" class="btn btn-primary" style="width:160px; height:35px; font-size: 18px;">Yeni Personel Ekle</a>