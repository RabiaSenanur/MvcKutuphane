
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Şifremi Unuttum</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- icon-->
    <link rel="icon" type="image/x-icon" href="~/webpanel/assets/online-library.ico" />
</head>


<body>
    <h1>Şifre Sıfırlama</h1>
    <div class=" w3l-login-form">
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Mail:</label>
                <div class="group">
                    <div class="input-group-append">
                        <i class="fas fa-user"></i>
                        <input type="email" class="form-control" placeholder="Mail adresinizi yazınız." required="required" name="Mail" />
                    </div>
                </div>
            </div>
            <button type="submit">Şifreyi Sıfırla</button>
        }
        <p class=" w3l-register-p">Bir hesabınız yok mu?<a href="/KayitOl/Kayit/" class="register"> Kayıt Ol</a></p>
    </div>

</body>

</html>
