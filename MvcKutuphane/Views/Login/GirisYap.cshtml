
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Kütüphane Giriş Sistemi</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/weblogin/css/style.css" rel="stylesheet" type="text/css" />
    <!-- /custom style sheet -->
    <!-- fontawesome css -->
    <link href="~/weblogin/css/fontawesome-all.css" rel="stylesheet" />
    <!-- /fontawesome css -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- icon-->
    <link rel="icon" type="image/x-icon" href="~/webpanel/assets/online-library.ico" />
</head>


<body>
    <h1>Kütüphane Giriş Paneli</h1>
    <div class=" w3l-login-form">
        <h2>Giriş Yapınız</h2>
        @using (Html.BeginForm("GirisYap", "Login", FormMethod.Post))
        {
            <div class=" w3l-form-group">
                <label>Kullanıcı Adı:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Kullanıcı Adınız" required="required" name="KullanıcıAdı" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Şifre:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Şifreniz" required="required" name="Sifre" />
                </div>
            </div>
            <div class="forgot">
                <a href="/Login/ResetPassword/">Şifremi Unuttum?</a>
                <p><input type="checkbox">Beni Hatırla</p>
            </div>
            <button type="submit">Giriş Yap</button>
        }
        <p class=" w3l-register-p">Bir hesabınız yok mu?<a href="/KayitOl/Kayit/" class="register"> Kayıt Ol</a></p>
        <p class="mb-0" style="text-align:center; margin-top:10px;">
            <a href="/AdminLogin/Login/" style="color:teal;">
                <i class="fas fa-lock" style="font-size: 24px;"></i>
            </a>
        </p>
    </div>
    <footer>
        <p class="copyright-agileinfo"> Tüm Hakları Saklıdır - All rights reserved  &copy; 2024</p>
    </footer>

</body>

</html>
