@model MvcKutuphane.Models.Entity.Tbl_Kategoriler
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
 {
    <div style="margin-bottom:15px"></div>
   <div class="form-group">
       <br />       
       <label>Kategori Adı</label>
       @Html.TextBoxFor(k=>k.KategoriAd, new { @class="form-control"})
   </div>
   <div>
       <button class="btn btn-warning" style="width:120px; height:35px; font-size:20px">Güncelle</button>
   </div>
 }

