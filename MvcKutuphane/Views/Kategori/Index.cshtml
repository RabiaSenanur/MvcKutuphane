@using MvcKutuphane.Models.Entity
@model List<Tbl_Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2> Kategoriler </h2>

<table class="table table-bordered">
    <tr style="background-color:aqua">
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <td>@ktg.KategoriID</td>
            <td>@ktg.KategoriAd</td>
            <td><a href="/Kategori/KategoriSil/@ktg.KategoriID" class="btn btn-danger" style="width:35px; height:35px; font-size:18px">Sil</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.KategoriID" class="btn btn-success" style="width:90px; height:35px; font-size:18px">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kategori/KategoriEkle/" class="btn btn-primary" style="width:160px; height:35px; font-size: 18px;">Yeni Kategori Ekle</a>
<a href="/Kategori/PasifKategori/" class="btn btn-secondary" style="width:160px; height:35px; font-size: 18px;">Pasif Kategoriler</a>